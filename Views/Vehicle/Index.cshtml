@model List<VehicleDetails>
<div class="container">
    <div class="d-flex justify-content-between ">
        <h1>Vehicle Details</h1>
        <h4>
            <a asp-controller="Vehicle" asp-action="Create" class="btn btn-primary"> <i class="bi bi-plus-circle"></i>Create</a>
        </h4>
    </div>
    @if (@Model.Count() > 0)
    {
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th scope="col">Car Name</th>
                    <th scope="col">Car Model</th>
                    <th scope="col">Registration Number</th>
                    <th scope="col">Color</th>
                    <th scope="col">Milege</th>
                    <th scope="col">FuelType</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var items in Model)
                {
                <tr>
                     <td class="text-center">@items.Car_Name</td>
                    <td class="text-center">@items.Carmodel</td>
                    <td class="text-center">@items.V_I_N</td>
                    <td class="text-center">@items.Color</td>
                    <td class="text-center">@items.Milege</td>
                    <td class="text-center">@items.FuelType</td>
                    <td class="btn-group w-100" role="group">
                               <a asp-controller="Vehicle" asp-action="Edit" asp-route-id="@items.ID"
                                   class="btn btn-warning" data-toggle="tooltip" data-placement="top" title="Edit">Edit</a>
                                <a asp-controller="Vehicle" asp-action="Delete" asp-route-id="@items.ID"
                                   class="btn btn-danger" data-toggle="tooltip" data-placement="top" title="Delete">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
        </table>
    }
    else
    {
    <div class="container content-center">
        <h1>No data found</h1>
    </div>
    }
</div>